<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">

    <display-name>Hotel Management System</display-name>

    <!-- Add Reservation Servlet -->
    <servlet>
        <servlet-name>AddReservationServlet</servlet-name>
        <servlet-class>com.servlet.AddReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddReservationServlet</servlet-name>
        <url-pattern>/AddReservationServlet</url-pattern>
    </servlet-mapping>

    <!-- Update Reservation Servlet -->
    <servlet>
        <servlet-name>UpdateReservationServlet</servlet-name>
        <servlet-class>com.servlet.UpdateReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateReservationServlet</servlet-name>
        <url-pattern>/UpdateReservationServlet</url-pattern>
    </servlet-mapping>

    <!-- Delete Reservation Servlet -->
    <servlet>
        <servlet-name>DeleteReservationServlet</servlet-name>
        <servlet-class>com.servlet.DeleteReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteReservationServlet</servlet-name>
        <url-pattern>/DeleteReservationServlet</url-pattern>
    </servlet-mapping>

    <!-- Display Reservations Servlet -->
    <servlet>
        <servlet-name>DisplayReservationsServlet</servlet-name>
        <servlet-class>com.servlet.DisplayReservationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayReservationsServlet</servlet-name>
        <url-pattern>/DisplayReservationsServlet</url-pattern>
    </servlet-mapping>

    <!-- Report Servlet -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/ReportServlet</url-pattern>
    </servlet-mapping>

    <!-- Report Criteria Servlet -->
    <servlet>
        <servlet-name>ReportCriteriaServlet</servlet-name>
        <servlet-class>com.servlet.ReportCriteriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportCriteriaServlet</servlet-name>
        <url-pattern>/ReportCriteriaServlet</url-pattern>
    </servlet-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>  
</element>

